  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <!-- CSS Stylesheets -->
  <!-- <link rel="stylesheet" href="../../css/profile.css"> -->
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@100;200;300;400;500;600;700;800;900&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <!-- Bootstrap Scripts -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <!--UUID-->
  <script src="https://unpkg.com/uuid@latest/dist/umd/uuidv4.min.js"></script>
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/a27b07fa54.js" crossorigin="anonymous"></script>

  
</head>
<body>
  <div class="container-fluid">
    <section id="navbar">
      <nav class="navbar sticky-top navbar-expand-lg">
        <a class="navbar-brand" href="/">veecee</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item logged-out" style="display:none;">
            <li class="nav-item logged-in" style="display:none;">
              <a class="nav-link" href="" id="account-link">Profile</a>
            </li>
            <li class="nav-item logged-in" style="display:none;">
              <a class="nav-link" id="logout" href="">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
    </section>
    <section id="profile-details">
      <div id="profile-info">
        <img src="../../images/user.png" class="profile-photo">
        <form class="row g-3 update-form">
          <div class="col-auto form-text-wrapper">
            <div class="input-group">
              <span class="input-group-text">Name</span>
              <input type="text" class="form-control" value="" id="update-display-name" placeholder="" readonly required>
            </div>
          </div>
          <div class="col-auto edit-button-wrapper">
            <button type="button" class="btn mb-3 btn-outline-secondary edit-button" onclick="makeEditable()"><i class="fas fa-pen"></i></button>
          </div>
          <div class="col-auto edit-button-wrapper">
            <button type="button" id="save-button" class="btn mb-3 save-button" disabled onclick="changeDisplayName()">Save</button>
          </div>
        </form>
      </div>
    </section>
  </div>

  <!-- <script type = "module" src ="../public/js/firebase.js"></script> -->
  <script src="../public/js/profile.js" defer></script>
 
</body>
</html>